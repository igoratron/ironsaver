<Window x:Class="IronSaver.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="IronSaver Settings" Height="74" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBox Grid.Row="0" Text="Take photos from:" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <TextBox Grid.Row="0" Text="Some folder" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Button Content="Browse" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBox Grid.Row="0" Text="Show clock?" />
            <CheckBox Content="Yes"/>
        </StackPanel>
    </StackPanel>
</Window>